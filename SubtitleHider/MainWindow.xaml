<Window x:Class="SubtitleHider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubtitleHider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Grid>
        <Button x:Name="ButtonPopupHider" Content="PopupHider" HorizontalAlignment="Left" Margin="200,120,0,0" VerticalAlignment="Top" Width="75" Click="ButtonPopupHider_Click"/>
        <Button x:Name="ButtonSetOpacity" Content="SetOpacity" HorizontalAlignment="Left" Margin="385,120,0,0" VerticalAlignment="Top" Width="75" Click="ButtonSetOpacity_Click"/>
        <TextBox x:Name="TextBoxOpacityValue" HorizontalAlignment="Left" Height="23" Margin="302,120,0,0" TextWrapping="Wrap" Text="0.2" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="ButtonShowHider" Content="ShowHider" HorizontalAlignment="Left" Margin="385,81,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.142,-0.203" Click="ButtonShowHider_Click"/>
        <Button x:Name="ButtonHideHider" Content="HideHider" HorizontalAlignment="Left" Margin="385,159,0,0" VerticalAlignment="Top" Width="75" Click="ButtonHideHider_Click"/>

    </Grid>
</Window>
